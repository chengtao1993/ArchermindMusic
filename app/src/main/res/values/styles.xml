<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    -->
    <style name="NoActionBar" parent="Base.Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Home_TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabMinWidth">145dp</item>
        <item name="tabMaxWidth">180dp</item>
        <item name="tabIndicatorColor">#47F8FC</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="android:background">#00000000</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="tabPaddingTop">50dp</item>
        <item name="tabPaddingBottom">25dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">#47F8FC</item>
        <item name="tabTextColor">#66ffffff</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>


</resources>
