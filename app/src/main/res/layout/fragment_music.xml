<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.archermind.music.MusicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="58dp">

            <ImageButton
                android:id="@+id/folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="125dp"
                android:background="@mipmap/folder"
                android:padding="10dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/data_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/ib"
                android:text="本地"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <ImageButton
                android:id="@+id/ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/usb"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/words" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                style="@style/Home_TabLayout"
                android:layout_width="944dp"
                android:layout_height="135dp"
                android:layout_gravity="right">


            </android.support.design.widget.TabLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#36393B"
            android:weightSum="4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:gravity="center"
                android:text="歌曲名称"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="188dp"
                android:gravity="center"
                android:text="歌手"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:gravity="center"
                android:text="专辑"
                android:textSize="36sp" />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="400dp"></android.support.v4.view.ViewPager>




            <com.archermind.music.view.LrcView
                android:id="@+id/music_words"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:gravity="center"
                android:lineSpacingExtra="18dp"
                android:textColor="#ffffff"
                android:textSize="40sp"></com.archermind.music.view.LrcView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp">

            <ImageView
                android:id="@+id/song_pic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="28dp"
                android:src="@drawable/song_pic" />

            <TextView
                android:id="@+id/song"
                android:text="未知歌曲名"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:gravity="center|left"
                android:paddingStart="30dp"
                android:drawableLeft="@drawable/song_name_icon"
                android:textSize="32sp" />
            <ImageButton
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="200dp"
                android:src="@mipmap/equalizer" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp">




            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="62dp"
                android:maxHeight="10dp"
                android:minHeight="10dp"
                android:progress="0"
                android:progressDrawable="@drawable/music_seekbar_bg" />

            <TextView
                android:id="@+id/music_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/seekBar"
                android:layout_marginRight="10dp"
                android:text="00:00"
                android:textColor="#a2a2a2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/seekBar"
                android:layout_marginLeft="10dp"
                android:text="00:00"
                android:textColor="#a2a2a2"
                android:textSize="20sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_gravity="bottom">

            <ImageButton
                android:id="@+id/playMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/play_mode1"
                android:scaleType="centerInside" />

            <LinearLayout
                android:id="@+id/play_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/music_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/pre" />


                <ImageButton
                    android:id="@+id/music_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/music_paly"
                    android:scaleType="center" />


                <ImageButton
                    android:id="@+id/music_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/next" />


            </LinearLayout>

            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@mipmap/favorite_button"
                android:scaleType="centerCrop" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
