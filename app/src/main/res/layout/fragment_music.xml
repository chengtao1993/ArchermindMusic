<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.archermind.music.MusicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/mainbg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="58dp">

            <ImageButton
                android:id="@+id/folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="125dp"
                android:background="@mipmap/folder"
                android:padding="10dp" />





        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:text="搜索"/>
            <TextView
                android:id="@+id/data_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/ib"
                android:text="本地"
                android:textColor="#ffffff"
                android:textSize="36sp" />
            <ImageButton
                android:id="@+id/ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/usb"
                android:padding="10dp" />
            <ImageButton
                android:id="@+id/words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/words" />
            <android.support.design.widget.TabLayout
                android:layout_gravity="right"
                android:id="@+id/tab_layout"
                android:layout_width="944dp"
                android:layout_height="135dp"
                style="@style/Home_TabLayout"
                >


            </android.support.design.widget.TabLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:layout_marginLeft="82dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="歌曲名称"
                android:textSize="36sp" />

            <TextView
                android:layout_marginLeft="188dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="歌手"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:gravity="center"
                android:text="专辑"
                android:textSize="36sp" />

        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="400dp">
        </android.support.v4.view.ViewPager>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:background="@mipmap/music_content">


            <TextView
                android:id="@+id/album_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxEms="10"
                android:singleLine="true"
                android:text=""
                android:textColor="#a2a2a2"
                android:textSize="25sp" />




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="44dp"
                android:src="@mipmap/equalizer" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_below="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="62dp"
                android:maxHeight="10dp"
                android:minHeight="10dp"
                android:progress="0"
                android:progressDrawable="@drawable/music_seekbar_bg"
                android:thumb="@mipmap/music_thum" />

            <TextView
                android:id="@+id/music_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/seekBar"
                android:layout_marginRight="10dp"
                android:text="00:00"
                android:textColor="#a2a2a2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/seekBar"
                android:layout_marginLeft="10dp"
                android:text="00:00"
                android:textColor="#a2a2a2"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/song_pic"
                android:layout_width="96dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekBar"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-62dp"
                android:layout_marginStart="152dp"
                android:textSize="32sp" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/bottom_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/playMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@mipmap/play_mode1"
                android:scaleType="centerInside" />

            <LinearLayout
                android:id="@+id/play_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">



                <ImageButton
                    android:id="@+id/music_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/pre" />





                <ImageButton
                    android:id="@+id/music_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/music_paly"
                    android:scaleType="center" />




                <ImageButton
                    android:id="@+id/music_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/next" />




            </LinearLayout>

            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@mipmap/favorite_button"
                android:scaleType="centerCrop" />

        </LinearLayout>




    </LinearLayout>

</FrameLayout>
